<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER" spacing="25.0" style="-fx-background-color: linear-gradient(to bottom, #f5f7fa, #e4e9f2);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bdsqltester.scenes.siswa.SiswaBiodataController">
    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <!-- Header -->
    <HBox alignment="CENTER_LEFT" spacing="14.0">
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 0, 2, 0, 1);" text="Biodata Siswa" />
<!--        <Region HBox.hgrow="ALWAYS"/>-->
        <Label style="-fx-font-size: 18px; -fx-text-fill: #7f8c8d; -fx-font-style: italic;" />
    </HBox>

    <!-- Main Content Card -->
    <VBox alignment="CENTER" spacing="0.0" style="-fx-background-color: white; -fx-background-radius: 18; -fx-padding: 28 32 32 32; -fx-effect: dropshadow(gaussian, rgba(44,62,80,0.08), 16, 0, 0, 4);">
        <GridPane hgap="20.0" vgap="16.0" style="-fx-padding: 0 0 20 0;">
            <columnConstraints>
                <ColumnConstraints minWidth="180" prefWidth="200" halignment="RIGHT"/>
                <ColumnConstraints minWidth="10" prefWidth="20" halignment="CENTER"/>
                <ColumnConstraints minWidth="240" prefWidth="280" hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="36" prefHeight="36" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="36" prefHeight="36" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="36" prefHeight="36" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="36" prefHeight="36" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="36" prefHeight="36" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="36" prefHeight="36" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="36" prefHeight="36" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="36" prefHeight="36" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <!-- Label Column -->
                <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 15px;" text="Nama Lengkap:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 15px;" text="Tempat/Tgl Lahir:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 15px;" text="Nomor Induk Siswa:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 15px;" text="Jenis Kelamin:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 15px;" text="Agama:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 15px;" text="Alamat:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 15px;" text="Nomor Telepon:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <Label style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d; -fx-font-size: 15px;" text="Golongan Darah:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>

                <!-- Separator Column -->
                <Label style="-fx-text-fill: #bdc3c7;" text=":" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label style="-fx-text-fill: #bdc3c7;" text=":" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label style="-fx-text-fill: #bdc3c7;" text=":" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label style="-fx-text-fill: #bdc3c7;" text=":" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Label style="-fx-text-fill: #bdc3c7;" text=":" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <Label style="-fx-text-fill: #bdc3c7;" text=":" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                <Label style="-fx-text-fill: #bdc3c7;" text=":" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                <Label style="-fx-text-fill: #bdc3c7;" text=":" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                <!-- Value Column -->
                <Label fx:id="namaLengkap" style="-fx-text-fill: #34495e; -fx-font-size: 15px;" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <Label fx:id="tempatTanggalLahir" style="-fx-text-fill: #34495e; -fx-font-size: 15px;" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <Label fx:id="nomorIndukSiswa" style="-fx-text-fill: #34495e; -fx-font-size: 15px;" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <Label fx:id="jenisKelamin" style="-fx-text-fill: #34495e; -fx-font-size: 15px;" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <Label fx:id="agama" style="-fx-text-fill: #34495e; -fx-font-size: 15px;" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
                <Label fx:id="alamat" style="-fx-text-fill: #34495e; -fx-font-size: 15px;" GridPane.rowIndex="5" GridPane.columnIndex="2"/>
                <Label fx:id="nomorTelepon" style="-fx-text-fill: #34495e; -fx-font-size: 15px;" GridPane.rowIndex="6" GridPane.columnIndex="2"/>
                <Label fx:id="golonganDarah" style="-fx-text-fill: #34495e; -fx-font-size: 15px;" GridPane.rowIndex="7" GridPane.columnIndex="2"/>
            </children>
        </GridPane>

        <!-- Button Lihat Data Orang Tua -->
        <Button fx:id="lihatDataOrangTua" onAction="#onLihatDataOrangTuaClicked" style="-fx-font-size: 15px; -fx-pref-width: 280px; -fx-pref-height: 42px; -fx-background-color: linear-gradient(to right, #9b59b6, #8e44ad); -fx-text-fill: white; -fx-background-radius: 8; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(155,89,182,0.3), 8, 0, 0, 2);" text="Lihat Data Orang Tua" />
    </VBox>

    <!-- Navigation Button -->
    <HBox alignment="CENTER" style="-fx-padding: 18 0 0 0;">
        <Button fx:id="kembali" onAction="#onKembaliClicked" style="-fx-font-size: 15px; -fx-pref-width: 130px; -fx-pref-height: 40px; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-background-radius: 8;" text="Kembali" />
    </HBox>
</VBox>
