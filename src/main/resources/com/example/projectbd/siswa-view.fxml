<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="TOP_CENTER" prefWidth="470.0" spacing="20.0" style="-fx-background-color: #f5f7fa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bdsqltester.scenes.siswa.SiswaViewController">
   <padding>
      <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
   </padding>

   <!-- Close Button (Top Right) -->
   <HBox alignment="TOP_RIGHT" />

   <!-- Main Content Card -->
   <VBox alignment="CENTER" prefHeight="248.0" prefWidth="390.0" spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 0);">
      <Label fx:id="nameLabel" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Selamat Datang, Siswa!">
         <padding>
            <Insets bottom="10.0" />
         </padding>
      </Label>

      <HBox alignment="CENTER" spacing="30.0">

         <!-- Action Buttons -->
         <VBox alignment="CENTER" spacing="12.0">
            <Button fx:id="biodataButton" alignment="CENTER" onAction="#onBiodataButtonClicked" style="-fx-font-size: 14px; -fx-pref-width: 200px; -fx-pref-height: 40px; -fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 5;" text="Biodata" />
            <Button fx:id="scheduleButton" alignment="CENTER" onAction="#onScheduleButtonClicked" style="-fx-font-size: 14px; -fx-pref-width: 200px; -fx-pref-height: 40px; -fx-background-color: #2ecc71; -fx-text-fill: white; -fx-background-radius: 5;" text="Jadwal Pelajaran" />
            <Button fx:id="gradeButton" alignment="CENTER" onAction="#onGradeButtonClicked" style="-fx-font-size: 14px; -fx-pref-width: 200px; -fx-pref-height: 40px; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-background-radius: 5;" text="Nilai Akademik" />
         </VBox>
      </HBox>
   </VBox>
   <Button fx:id="backToLogin" onAction="#onBackToLoginClicked" style="-fx-font-size: 13px; -fx-background-color: transparent; -fx-text-fill: #7f8c8d; -fx-underline: true; -fx-cursor: hand; -fx-alignment: baseline-left;" text="← Kembali ke Halaman Login" />
</VBox>
