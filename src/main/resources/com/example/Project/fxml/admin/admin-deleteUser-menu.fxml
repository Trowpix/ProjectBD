<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-background-color: #f4f7f9;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Project.scenes.admin.DeleteUserMenuController">
    <padding>
        <Insets bottom="20.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Menu Hapus Pengguna" />
    <Label style="-fx-text-fill: #7f8c8d;" text="Pilih tipe pengguna yang ingin Anda hapus dari sistem." />

    <HBox alignment="CENTER" spacing="30.0" style="-fx-padding: 40px 0;">
        <Button onAction="#onDeleteSiswaClicked" prefHeight="80.0" prefWidth="200.0" style="-fx-font-size: 18px; -fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;" text="Hapus Siswa" />
        <Button onAction="#onDeleteGuruClicked" prefHeight="80.0" prefWidth="200.0" style="-fx-font-size: 18px; -fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold;" text="Hapus Guru" />
    </HBox>

    <Button onAction="#onKembaliClicked" style="-fx-font-size: 14px; -fx-background-color: #95a5a6; -fx-text-fill: white;" text="Kembali ke Dashboard" />
</VBox>