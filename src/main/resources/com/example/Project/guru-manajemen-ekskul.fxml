<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Project.scenes.guru.GuruManajemenEkskulController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <children>
        <Label text="Manajemen Ekstrakurikuler">
            <font>
                <Font name="System Bold" size="22.0" />
            </font>
        </Label>
        <HBox spacing="30.0" VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="tableViewEskul" prefWidth="500.0" HBox.hgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="kolomNama" prefWidth="150.0" text="Nama Ekstrakurikuler" />
                        <TableColumn fx:id="kolomJadwal" prefWidth="120.0" text="Jadwal" />
                        <TableColumn fx:id="kolomPembina" prefWidth="130.0" text="Pembina" />
                        <TableColumn fx:id="kolomAksi" prefWidth="100.0" text="Aksi" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
                <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                    <children>
                        <Label fx:id="formLabel" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Tambah Ekstrakurikuler Baru" />
                        <TextField fx:id="fieldNama" promptText="Nama Ekstrakurikuler" />
                        <TextField fx:id="fieldJadwal" promptText="Jadwal (Contoh: Setiap Jumat)" />
                        <TextField fx:id="fieldPembina" promptText="Nama Pembina" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Button fx:id="tombolSimpan" onAction="#onSimpanClicked" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Simpan" />
                                <Button fx:id="tombolBatal" onAction="#onBatalClicked" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Batal" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </HBox>
        <Button onAction="#onBackToDashboardClicked" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-weight: bold;" text="← Kembali ke Dashboard" />
    </children>
</VBox>